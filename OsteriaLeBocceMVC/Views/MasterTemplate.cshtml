        ga('create', 'UA-99593554-1', 'auto');
        ga('send', 'pageview');

    </script>

    <header>
        
        <div class="background-color-primary-0 social-bar-wrapper" style="width:100%;">
            <div class="container background-color-primary-0">
                <div class="row-">
                    <div class="col-tn-12 col-sm-offset-10 col-sm-2">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <span class="color-primary-6"> Seguici!</span>
                                        <span><a href="https://www.facebook.com/osterialebocce/"><img class="icon" alt="facebook" title="facebook" src="~/images/icone/face.png" /></a></span>
                                        <span><a href="https://www.instagram.com/osterialebocce/"><img class="icon" alt="instagram" title="instagram" src="~/images/icone/insta.png" /></a></span>
                                        <span><a href="https://www.tripadvisor.it/Restaurant_Review-g670844-d7318695-Reviews-Osteria_Le_Bocce-Valmadrera_Lake_Como_Lombardy.html"><img class="icon" alt="tripadvisor" title="tripadvisor" src="~/images/icone/trip.png" /></a></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container" id="topbar">
            <div class="row" style="padding-top:10px;padding-bottom:10px;">
                <div class="col-sm-4">
                    <a href="/"><img alt="logo" src="~/images/logo_olb2.png" class="img img-responsive center-block" /></a>
                </div>
                <div class="col-sm-6">
                    <h1 class="h1Title">Dà Gioia Al Gusto</h1>
                </div>
            </div>
        </div>

        @Html.Partial("navigationPV")

        @RenderSection("HeaderSection", false)
        
    </header>

    <div class="container-fluid">
        <div class="row">
            <div class="page-wrapper col-sm-offset-1 col-sm-10 background-color-primary-5">

                <div class="row title-border">
                    <div class="col-tn-12">
                        <h1 class="page-title">@CurrentPage.Name</h1>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-tn-12">
                        @RenderBody()
                        <br />
                    </div>
                </div>

            </div>
        </div>
    </div>

