@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@using System.Text.RegularExpressions
@{
    var shareImagesList = Model.Content.GetPropertyValue<string>("bannerXs").Split(new string[] { "," }, StringSplitOptions.RemoveEmptyEntries).Select(int.Parse);
    var shareImagesCollection = Umbraco.TypedMedia(shareImagesList).Where(x => x != null);

    string imageUrl = "http://www.osterialebocce.it" + shareImagesCollection.First().Url;
    string descrizione = Regex.Replace(Model.Content.GetPropertyValue<string>("Descrizione"), "<.*?>", String.Empty);
}
<meta property="og:url" content="@Model.Content.UrlWithDomain()" />
<meta property="og:type" content="article" />
<meta property="og:title" content="@Model.Content.Name" />
<meta property="og:description" content="@descrizione" />
<meta property="og:image" content="@imageUrl" />

<meta property="og:site_name" content="osterialebocce.it" />
<meta property="fb:page_id" content="267127993480495" />
<meta property="fb:app_id" content="1352089221552320" />